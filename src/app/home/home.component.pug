input([(ngModel)]="url", placeholder='Subreadit URL', type="text")

button(type="button", (click)="getFeed()") Get Feed

.content
    .grid
        div(*ngFor="let item of data")
            img(*ngIf="item.type === 'gif'" src="{{item.url}}")
            img(*ngIf="item.type === 'image'" src="{{item.url}}")
